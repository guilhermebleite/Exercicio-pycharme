from random import randint
from time import sleep
print('---='*20)
print('Advinhe o número que eu irei escolher de 0 a 5')
print('--='*20)
n=int(input('Digite sua aposta:'))
sleep(1)
print('Será que você acertou...')
sleep(2)
print('--='*20)
maquina = randint(0,5)
if maquina == n:
    print('''Parabéns, Você acertou!!
Escolhemos  o número: {}'''.format(n))
else:
    print('''Eu ganhei de você!!!!
     Escolhi o número '' {} ''
     e você ''{}'' . Tente outra vez'''.format(maquina,n))
